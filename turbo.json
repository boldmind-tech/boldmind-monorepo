{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".env.example",
    "tsconfig.json",
    "tailwind.config.js",
    "postcss.config.js",
    "package.json"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "type-check": {
      "outputs": []
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"]
    }
  }
}